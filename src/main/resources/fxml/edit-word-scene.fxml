<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      stylesheets="@../css/edit-word-css.css"
      fx:controller="Program.EditWordController"
      prefHeight="400.0" prefWidth="600.0">
    <children>
        <Label text="Word:"/>
        <TextArea fx:id="wordToLearn"/>
        <Label text="Translation:"/>
        <TextArea fx:id="translation"/>
        <Label text="Note:"/>
        <TextArea fx:id="note"/>
        <HBox>
            <Button fx:id="doneButton" text="Done" onAction="#handleDoneButton"/>
            <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancelButton"/>
        </HBox>
    </children>
</VBox>
